<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore</artifactId>
        <version>1.1</version>
        <relativePath>../../</relativePath>
    </parent>

    <artifactId>editor-assembly</artifactId>
    <packaging>pom</packaging>
    <name>Apromore Editor Bundle Assembly</name>

    <properties>
        <deploy.dir>${project.build.directory}/repository</deploy.dir>
        <editor.version>1.2</editor.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>apromore-editor</artifactId>
            <version>${editor.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-bpmn2_0</artifactId>
            <version>${editor.version}</version>
            <type>bundle</type>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-bpstruct</artifactId>
            <version>${editor.version}</version>
            <type>bundle</type>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-diagram</artifactId>
            <version>${editor.version}</version>
            <type>bundle</type>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-downloader</artifactId>
            <version>${editor.version}</version>
            <type>bundle</type>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-epc</artifactId>
            <version>${editor.version}</version>
            <type>bundle</type>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-jpdl</artifactId>
            <version>${editor.version}</version>
            <type>bundle</type>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-measurement</artifactId>
            <version>${editor.version}</version>
            <type>bundle</type>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-pdf</artifactId>
            <version>${editor.version}</version>
            <type>bundle</type>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-petrinet</artifactId>
            <version>${editor.version}</version>
            <type>bundle</type>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-syntaxchecker</artifactId>
            <version>${editor.version}</version>
            <type>bundle</type>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-xpdl</artifactId>
            <version>${editor.version}</version>
            <type>bundle</type>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>editor-platform-extension-yawl</artifactId>
            <version>${editor.version}</version>
            <type>bundle</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${deploy.dir}/usr</outputDirectory>
                            <overWriteIfNewer>true</overWriteIfNewer>
                            <excludeTransitive>false</excludeTransitive>
                            <excludeArtifactIds>
                                org.junit,org.apromore,com.springsource.org.aopalliance,fluent-hc,httpclient,httpcore,jcl-over-slf4j,logback-core,
                                jaxb2-basics-runtime,org.eclipse.gemini.blueprint.extender,org.eclipse.gemini.blueprint.io,logback-classic
                                org.eclipse.gemini.blueprint.core,org.eclipse.osgi,org.eclipse.osgi.services,slf4j-api,org.springframework.aop,
                                org.springframework.asm,org.springframework.beans,org.springframework.context,org.springframework.core,
                                org.springframework.expression,org.springframework.jdbc,org.springframework.jms,org.springframework.orm,
                                org.springframework.oxm,org.springframework.transaction,org.springframework.web,org.springframework.web.servlet,
                                org.springframework.aspects,org.springframework.context.support,commons-httpclient,javax.persistence,
                                com.springsource.javax.xml.bind
                            </excludeArtifactIds>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
