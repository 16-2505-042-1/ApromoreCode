<window id="win" width="300px" closable="false" position="center" title="Select Metrics">
    <vbox>
        <groupbox width="285px">
            <caption label="Size"/>
            <radiogroup id="size">
                <grid>
                    <columns>
                        <column />
                        <column />
                    </columns>
                    <rows>
                        <row>
                            <radio id="ysize" label="yes" selected="true"/>
                            <radio id="nsize" label="no" />
                        </row>
                    </rows>
                </grid>
            </radiogroup>
        </groupbox>

