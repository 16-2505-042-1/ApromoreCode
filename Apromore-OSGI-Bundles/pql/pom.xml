<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <!--
    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore</artifactId>
        <version>1.1</version>
        <relativePath>../../</relativePath>
    </parent>
    -->

    <groupId>org.pql</groupId>
    <artifactId>pql-osgi</artifactId>
    <version>1.1.0</version>
    <packaging>bundle</packaging>

    <repositories>
        <repository>
            <id>ApromoreDev.mvn-repo</id>
            <name>Maven repository for JARs specific to the Apromore project</name>
            <url>https://raw.github.com/apromore/ApromoreDev/master/mvn-repo/</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>3.0.1</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Embed-Dependency>
                            artifactId=pql|themis|lucene-analyzers-common|lucene-core|lucene-queryparser
                        </Embed-Dependency>
                        <Embed-Transitive>false</Embed-Transitive>
                        <Bundle-ClassPath>.,{maven-dependencies}</Bundle-ClassPath>
                        <Bundle-Name>pql OSGI</Bundle-Name>
                        <Bundle-SymbolicName>org.pql-osgi</Bundle-SymbolicName>
                        <Export-Package>
                            org.apache.lucene.codecs,
                            org.apache.lucene.codecs.lucene50,
                            org.apache.lucene.search.similarities,
                            org.apache.lucene.util,
                            org.jbpt.persist,
                            org.jbpt.petri.persist,
                            org.pql.antlr,
                            org.pql.api,
                            org.pql.bot,
                            org.pql.core,
                            org.pql.index,
                            org.pql.label,
                            org.pql.logic,
                            org.pql.mc,
                            org.pql.query,
                            org.pql.test
                        </Export-Package>
                        <Import-Package>
                            org.jbpt.automaton,
                            org.jbpt.graph.abs,
                            org.jbpt.algo.graph,
                            org.jbpt.hypergraph.abs,
                            org.jbpt.petri,
                            org.jbpt.petri.behavior,
                            org.jbpt.petri.io,
                            org.jbpt.petri.querying,
                            org.jbpt.petri.structure,
                            org.jbpt.petri.unfolding,
                            org.jbpt.petri.unfolding.order,
                            org.jbpt.petri.untangling,
                            org.jbpt.petri.untangling.pss,
                            org.jbpt.petri.wftree,
                            org.jbpt.throwable,
                            com.mysql.jdbc,
                            org.themis,
                            org.themis.ir,
                            org.themis.ir.etvsm,
                            org.themis.ir.vsm,
                            org.themis.pp,
                            org.themis.util,
                            org.apache.lucene.codecs,
                            org.apache.lucene.codecs.lucene50,
                            org.apache.lucene.search.similarities,
                            org.apache.lucene.util,
                            org.antlr.v4.runtime,
                            org.antlr.v4.runtime.atn,
                            org.antlr.v4.runtime.dfa,
                            org.antlr.v4.runtime.misc,
                            org.antlr.v4.runtime.tree,
                            org.antlr.v4.runtime.tree.gui,
                            org.antlr.v4.runtime.tree.pattern,
                            org.antlr.v4.runtime.tree.xpath,
                            org.json,
                            org.slf4j,
                            org.postgresql,
                            org.postgresql.copy,
                            org.postgresql.core,
                            org.postgresql.core.types,
                            org.postgresql.core.v2,
                            org.postgresql.core.v3,
                            org.postgresql.ds,
                            org.postgresql.ds.common,
                            org.postgresql.ds.jdbc4,
                            org.postgresql.ds.jdbc23,
                            org.postgresql.fastpath,
                            org.postgresql.geometric,
                            org.postgresql.gss,
                            org.postgresql.jdbc2,
                            org.postgresql.jdbc2.optional,
                            org.postgresql.jdbc3,
                            org.postgresql.jdbc3g,
                            org.postgresql.jdbc4,
                            org.postgresql.jdbc4.array,
                            org.postgresql.largeobject,
                            org.postgresql.ssl,
                            org.postgresql.ssl.jdbc4,
                            org.postgresql.translation,
                            org.postgresql.util,
                            org.postgresql.xa,
                            org.postgresql.xa.jdbc3,
                            org.postgresql.xa.jdbc4,
                            org.processmining.models.graphbased.directed.petrinet,
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>org.apache.lucene</groupId>
            <artifactId>lucene-analyzers-common</artifactId>
            <version>5.3.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.lucene</groupId>
            <artifactId>lucene-core</artifactId>
            <version>5.3.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.lucene</groupId>
            <artifactId>lucene-queryparser</artifactId>
            <version>5.3.0</version>
        </dependency>
        <dependency>
            <groupId>org.pql</groupId>
            <artifactId>pql</artifactId>
            <version>1.1.0</version>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <version>1.3</version>
        </dependency>

        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql-osgi</artifactId>
            <version>9.3-1101-jdbc41</version>
        </dependency>
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>5.1.31</version>
        </dependency>
        <dependency>
            <groupId>org.themis</groupId>
            <artifactId>themis-osgi</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>org.ini4j</groupId>
            <artifactId>ini4j-osgi</artifactId>
            <version>0.5.2</version>
        </dependency>
        <dependency>
            <groupId>org.antlr</groupId>
            <artifactId>antlr4-runtime-osgi</artifactId>
            <version>4.3</version>
        </dependency>
        <dependency>
            <groupId>org.jbpt</groupId>
            <artifactId>jbpt-petri-osgi</artifactId>
            <version>0.2.433</version>
        </dependency>
        <dependency>
            <groupId>org.jbpt</groupId>
            <artifactId>jbpt-core</artifactId>
            <version>0.2.433</version>
        </dependency>
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json-osgi</artifactId>
            <version>20090211</version>
        </dependency>

    </dependencies>
</project>
